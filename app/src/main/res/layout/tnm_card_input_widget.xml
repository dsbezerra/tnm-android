<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_unknown"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/numberFieldInputLayout"
        app:hintTextAppearance="@style/Widget.TNM.TextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        >

        <com.tnmlicitacoes.app.ui.widget.TnmCardNumberEditText
            android:id="@+id/numberField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número do cartão"
            android:nextFocusRight="@+id/expiryDateField"
            android:nextFocusForward="@+id/expiryDateField"
            android:nextFocusDown="@+id/expiryDateField"
            android:inputType="number"
            android:maxLength="19"
            android:layout_gravity="left"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible"
            android:paddingRight="@dimen/spacing_normal"
            />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_below="@+id/numberFieldInputLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/expiryDateInputLayout"
            app:hintTextAppearance="@style/Widget.TNM.TextInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.tnmlicitacoes.app.ui.widget.TnmExpiryDateEditText
                android:id="@+id/expiryDateField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM/AA"
                android:nextFocusRight="@+id/cvcField"
                android:nextFocusForward="@+id/cvcField"
                android:nextFocusDown="@+id/cvcField"
                android:nextFocusLeft="@id/numberField"
                android:nextFocusUp="@id/numberField"
                android:inputType="date"
                android:maxLength="5"
                android:visibility="visible"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cvcInputLayout"
            app:hintTextAppearance="@style/Widget.TNM.TextInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.stripe.android.view.StripeEditText
                android:id="@+id/cvcField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CSC"
                android:nextFocusLeft="@id/expiryDateField"
                android:nextFocusUp="@id/expiryDateField"
                android:inputType="number"
                android:maxLength="4"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</RelativeLayout>
