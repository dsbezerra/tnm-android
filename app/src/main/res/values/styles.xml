<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.DefaultTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Theme.DefaultDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Primary palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Theme.VerifyNumber" parent="Theme.DefaultTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.DefaultTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SettingsTheme" parent="Theme.DefaultTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!-- Overriding the category views as they don't look good -->
        <item name="android:listSeparatorTextViewStyle">@style/SettingsTheme.ListSeparatorTextView</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <!-- The default category looks bad, so overriding its appearance now -->
    <style name="SettingsTheme.ListSeparatorTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="PdfTheme" parent="Theme.DefaultTheme">
        <item name="android:windowBackground">@color/background_grey</item>
    </style>

    <style name="LightToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget" />

    <style name="Widget.TNM" parent="Widget" />

    <style name="Widget.TNM.ErrorMessage">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="Widget.TNM.NoticeItemCard">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/spacing_tiny</item>
    </style>

    <style name="Widget.TNM.NoticeInfoItem">
        <item name="android:paddingTop">@dimen/padding_info_item_tl</item>
        <item name="android:paddingBottom">@dimen/padding_info_item_tl</item>
        <item name="android:paddingLeft">@dimen/padding_info_item_sides</item>
        <item name="android:paddingRight">@dimen/padding_info_item_sides</item>
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.TNM.NoticeInfoItemDate" parent="Widget.TNM.NoticeInfoItem">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.TNM.NoticeInfoItemCat">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Widget.TNM.CategoryGrid">
        <item name="android:listSelector">?attr/selectableItemBackground</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:stretchMode">spacingWidth</item>
        <item name="android:paddingTop">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingBottom">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingLeft">@dimen/grid_leftright_padding</item>
        <item name="android:paddingRight">@dimen/grid_leftright_padding</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:horizontalSpacing">@dimen/grid_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_vertical_spacing</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Widget.TNM.TabLayout">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="tabTextColor">#ffc58d</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/Widget.TNM.TabLayoutTextAppearance</item>
    </style>

    <style name="Widget.TNM.TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#ffc58d</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.TNM.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Widget.TNM.CheckBox.White" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Widget.TNM.DetailsCard">
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Widget.TNM.ActionButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.TNM.BottomSheetLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.TNM.BottomSheetText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.TNM.BottomSheetIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Widget.TNM.TextInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.TNM.ResendEmailButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_resend_email_compat</item>
    </style>

    <style name="Widget.TNM.AccountHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.TNM" parent="TextAppearance"/>
    <style name="TextAppearance.TNM.RegistrationHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextAppearance.TNM.RegistrationHeaderCollapsed">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.TNM.RegistrationDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginBottom">@dimen/spacing_tiny</item>
    </style>
</resources>
